<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zythem.popularmovies.SearchResultsActivity"
    tools:showIn="@layout/activity_search_results">

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/rv_recycler_view_search"
        />
    <!-- empty grid -->
    <TextView
        android:id="@+id/rv_grid_empty_search"
        android:text="@string/empty_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="@dimen/text_margin"
        />

</RelativeLayout>

