<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widget_background"
    android:orientation="vertical"
    android:padding="@dimen/widget_layout_margin">

    <TextView
        android:id="@+id/widget_detail_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="@dimen/widget_heading_size"
        android:textColor="@color/widget_text" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_divider_height"
        android:background="@color/colorAccent"
        android:layout_marginTop="@dimen/text_divider_margin"
        android:layout_marginBottom="@dimen/widget_layout_margin"/>

    <ListView
        android:id="@+id/widget_detail_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="@dimen/widget_layout_margin"
        tools:listitem="@layout/widget_detail_item"/>
    <TextView
        android:id="@+id/widget_detail_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="@dimen/widget_text_size"
        android:textColor="@color/widget_text"
        android:text="@string/empty_grid"/>

</LinearLayout>
