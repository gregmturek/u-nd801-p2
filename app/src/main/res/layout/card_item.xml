<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/card_layout_margin"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/card_cardCornerRadius"
        card_view:elevation="@dimen/card_elevation">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_layout_margin">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="@dimen/poster_layout_width"
                android:layout_height="@dimen/poster_layout_height"
                android:layout_centerHorizontal="true"
                android:gravity="center">
            </TextView>

            <ImageView
                android:contentDescription="@string/cd_movie_poster"
                android:id="@+id/iv_image"
                android:layout_width="@dimen/poster_layout_width"
                android:layout_height="@dimen/poster_layout_height"
                android:layout_centerHorizontal="true">
            </ImageView>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_image"
                android:layout_alignStart="@+id/iv_image">
            </TextView>

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_image"
                android:layout_alignEnd="@+id/iv_image">
            </TextView>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>